<h1>My Team</h1>
<table>
  <thead>
    <tr>
      <th>Name</th><th>Email</th><th>Hire Date</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |e| %>
      <tr>
        <td><%= e.name %></td>
        <td><%= e.email %></td>
        <td><%= e.hire_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Time Off Requests</h1>
<table>
  <thead>
    <tr>
      <th>Requested By</th>
      <th>Supervisor</th>
      <th>Employee</th>
      <th>Dates</th>
      <th>Reason</th>
    </tr>
  </thead>
  <tbody>
    <% @time_off_requests.each do |t| %>
      <tr>
        <td><%= t.submitted_by_name %></td>
        <td><%= t.supervisor_name %></td>
        <td><%= t.fiscal_year_employee.employee_name %></td>
        <td><%= t.time_offs.map(&:date).sort.join(', ') %></td>
        <td><%= t.reason.humanize %></td>
      </tr>
    <% end %>
  </tbody>
</table>