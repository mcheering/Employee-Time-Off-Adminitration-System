<!DOCTYPE html>
<html>
  <head>
    <title>Employee Time-Off System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= vite_client_tag %>
    <%= vite_javascript_tag "entrypoints/application.jsx", type: "module" %>
  </head>

  <body>
  <div id="react-layout-header"
  data-logged-in="<%= employee_signed_in?.to_s %>"
  data-roles="<%= (employee_signed_in? ? {
    is_admin: current_employee.is_administrator,
    is_supervisor: current_employee.is_supervisor,
    employee_id: current_employee.id
  } : {}).to_json %>"
  data-company-name="<%= Company.first&.name || 'Your Company' %>">
</div>

    <%= yield %>
  </body>
</html>